@model GeneratePDF.Models.MasterModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p style="text-align:right; margin-top:-55px">@Html.ActionLink("PDF", "PrintPDF")</p>
<style>
    .jumbotron {
        padding-top: 1px !important;
        padding-bottom: 1px !important;
        background-color: #0c4da3;
        margin-bottom: 14px;
    }
    .container .jumbotron{
        padding-right:10px;
    }

    a {
        color: #fff;
    }


    .table-striped > tbody > tr:nth-child(odd) > td, .table-striped > tbody > tr:nth-child(odd) > th {
        background-color: #d2e8fb;
    }

    .table-striped tr:first-child th {
        background-color: #0c4da3 !important;
        color: #ffffff;
    }

    th{
        text-align:center
    }
</style>
<div class="row">
    <div class="col-md-10 col-xs-9">
        <div class="jumbotron">
            <h4 style="font-size:25px; color:white"><b>Statement of Account</b></h4>
        </div>
    </div>
    <div class="pull-left">
        <img src="~/Image/nibl.png" style="height:60px; width:auto" />
    </div>
</div>

<div class="row">
    <div class="col-md-6 col-xs-6" style="color:white">
        <div class="jumbotron" style="padding-left: 10px; height: 135px; background-color: #e5f3ff; color: #0c4da3">
            @foreach (var item in ViewBag.accountDetails)
            {
                <h3><b>@item.ACCT_NAME</b></h3>
                <h4>@item.Address</h4>
                <h4>@item.EMAIL_ID</h4>

            }

        </div>
    </div>
    <div class="col-md-6 col-xs-6" style="color:white">
        <div class="jumbotron" style="padding-left: 10px; height: 135px; background-color: #e5f3ff; color: #0c4da3">
             
                @foreach (var itm in ViewBag.accountDetails)
                {
                    <h4>Account Branch <span class="col-md-offset-1"><span style="margin-left:8px">:</span> @itm.Branch</span></h4>
                    <h4>Account Type <span class="col-md-offset-1"><span style="margin-left:24px">:</span><span style="font-size:17px"> @itm.Scheme</span></span></h4>
                    <h4>Account Number <span class="col-md-offset-1"><span style="margin-left:2px">:</span> @itm.FORACID</span></h4>
                    <h4>Currency <span class="col-md-offset-1"><span style="margin-left:60px">:</span> @itm.Curr</span></h4>
                }

            

        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12" style="color:white">
        <div class="jumbotron">
            @foreach (var item in ViewBag.accountBalance)
            {
                <h4 style="font-size: 25px;"><b>Statement Period:</b> <span style="font-size:large">@item.From to @item.To</span></h4>
                <div style="display:inline; float:right;"> </div>
            }

        </div>
    </div>

</div>



<table class="table table-bordered table-striped" align="center">
    <tr>
        <th style="text-align:center">
            Tran Date
        </th>
        <th style="text-align:center">
            Particular
        </th>
        <th style="text-align:center">
            Value Date
        </th>
        <th style="text-align:center">
            Debit
        </th>
        <th style="text-align:center">
            Credit
        </th>
        <th style="text-align:center">
            Balance
        </th>
    </tr>

    @foreach (var item in ViewBag.accountStatementDetails)
    {
        <tr>
            <td align="center">
                @item.TranDate
            </td>
            <td>
                @item.Particulars
            </td>
            <td align="center">
                @item.ValueDate
            </td>
            <td align="right">
                @item.Debit
            </td>
            <td align="right">
                @item.Credit
            </td>
            <td align="right">
                @item.Balance
            </td>
        </tr>
    }

</table>

<hr />
<div class="row">
    <div class="col-md-12 col-xs-12" style="color:white">

        <div class="jumbotron" style="margin-bottom:0px;">
            <h4 style="font-size:25px"><b>Account Summary</b></h4>
        </div>
        <div class="jumbotron" style="padding-left: 10px; background-color: #d2e8fb; color:#0a3874; padding-left:0px; padding-right:0px">
            <table class="table table-bordered table-striped" align="center" cellpadding="15" style="line-height:0; margin-bottom:0px; ">
                <tr style="font-size:large;">
                    <th>Opening Balance</th>
                    <th>Debit Entries</th>
                    <th>Credit Entries</th>
                    <th>Closing Balance</th>
                </tr>


                @foreach (var item in ViewBag.accountBalance)
                {
                    <tr style="font-size:large">
                        <td align="center">@item.OpeningBalance</td>
                        <td align="center">@item.DebitEntries</td>
                        <td align="center">@item.CreditEntries</td>
                        <td align="center">@item.ClosingBalance</td>

                    </tr>


                }
            </table>

        </div>
    </div>

</div>

<div class="row">
    <div class="col-md-12 col-xs-12" style="color:white">
        <div class="jumbotron" style="padding-left: 10px;">
            <h4 style="font-size:1.3rem">NOTE: CHEQUE BOOKS ARE TO BE COLLECTED WITHIN 90 DAYS FROM THE DATE OF REQUEST OTHERWISE NPR 300.00 WILL BE LEVIED </h4>

        </div>
    </div>
</div>

